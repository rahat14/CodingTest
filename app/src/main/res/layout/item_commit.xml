<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#333333"
    android:minHeight="72dp"
    app:cardCornerRadius="0dp"
    android:layout_height="wrap_content">
  <LinearLayout
      android:padding="8dp"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent">
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:weightSum="8"
          android:gravity="center_vertical"
          android:layout_height="wrap_content">

          <TextView
              android:id="@+id/commitName"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="5.8"
              android:fontFamily="@font/source_sans_pro"
              android:text="This is a large text commit  slaf nlsnfklsn mlkmdklgm"
              android:textColor="@color/white"
              android:textSize="17sp" />

          <TextView
              android:id="@+id/commitDate"
              android:layout_width="0dp"
              android:layout_height="12dp"
              android:layout_weight="2.2"
              android:fontFamily="@font/source_code_pro"
              android:text="Yesterday"
              android:textAlignment="textEnd"
              android:textColor="#B8B8B8"
              android:textSize="12sp" />


      </LinearLayout>
      <LinearLayout
          android:layout_marginTop="4dp"
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content">
          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/autherImage"
              android:layout_width="20dp"
              android:src="@color/white"
              android:layout_height="20dp"/>

          <TextView
              android:layout_marginHorizontal="6dp"
              android:textFontWeight="400"
              android:id="@+id/commitAuthor"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/source_code_pro"
              android:lineSpacingExtra="2sp"
              android:text="Author Name"
              android:textColor="#9B9B9B"
              tools:ignore="UnusedAttribute" />


      </LinearLayout>


  </LinearLayout>

    <View
        android:background="#404040"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</com.google.android.material.card.MaterialCardView>